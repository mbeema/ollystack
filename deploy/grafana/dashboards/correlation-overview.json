      "options": {
        "content": "# OllyStack Correlation Explorer\n\nEnter a **correlation_id** to view all related traces, logs, and metrics across your distributed system.\n\n**Format:** `olly-{timestamp}-{suffix}` (e.g., `olly-2n9c3ok-a1b2c3d4`)",
        "mode": "markdown"
      },
      "title": "",
      "type": "text"
    },
    {
      "datasource": {"type": "grafana-clickhouse-datasource", "uid": "ollystack-clickhouse"},
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "displayMode": "auto"
          }
        },
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "duration_ms"},
            "properties": [
              {"id": "custom.displayMode", "value": "color-background-solid"},
              {"id": "thresholds", "value": {"mode": "absolute", "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 100},
                {"color": "red", "value": 1000}
              ]}}
            ]
          },
          {
            "matcher": {"id": "byName", "options": "StatusCode"},
            "properties": [
              {"id": "custom.displayMode", "value": "color-background-solid"},
              {"id": "mappings", "value": [
                {"options": {"ERROR": {"color": "red", "index": 0}}, "type": "value"},
                {"options": {"OK": {"color": "green", "index": 1}}, "type": "value"}
              ]}
            ]
          }
        ]
      },
      "gridPos": {"h": 10, "w": 12, "x": 0, "y": 3},
      "id": 2,
      "options": {"showHeader": true, "cellHeight": "sm"},
      "targets": [
        {
          "datasource": {"type": "grafana-clickhouse-datasource", "uid": "ollystack-clickhouse"},
          "format": 1,
          "rawSql": "SELECT \n  Timestamp,\n  ServiceName,\n  SpanName,\n  Duration / 1000000 as duration_ms,\n  StatusCode,\n  TraceId\nFROM ollystack.traces \nWHERE correlation_id = '${correlation_id}'\nORDER BY Timestamp ASC\nLIMIT 100",
          "refId": "A"
        }
      ],
      "title": "Traces for Correlation: ${correlation_id}",
      "type": "table"
    },
    {
